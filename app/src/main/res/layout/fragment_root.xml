<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <FrameLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/layout_progress"
                layout="@layout/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/delimiter_width"
            android:background="@color/delimiter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_item_size"
            android:orientation="horizontal">

            <com.gmail.segenpro.myweather.presentation.core.widgets.TabBarButton
                android:id="@+id/forecast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:weatherIconResource="@string/wi_day_sunny"
                app:weatherIconSize="25" />

            <com.gmail.segenpro.myweather.presentation.core.widgets.TabBarButton
                android:id="@+id/charts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:weatherIconResource="@string/wi_cloud"
                app:weatherIconSize="25" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_error"
        layout="@layout/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>
