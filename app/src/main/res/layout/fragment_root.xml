<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/server_error_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/background"
                android:gravity="center"
                android:text="@string/server_error"
                android:visibility="gone" />

            <TextView
                android:id="@+id/location_error_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/background"
                android:gravity="center"
                android:text="@string/location_error"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_progress"
                layout="@layout/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/delimiter_width"
            android:background="@color/delimiter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_item_size"
            android:orientation="horizontal">

            <!--todo заменить иконки-->
            <com.gmail.segenpro.myweather.presentation.core.widgets.TabBarButton
                android:id="@+id/forecast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:weatherIconResource="@string/wi_day_sunny"
                app:weatherIconSize="25" />

            <com.gmail.segenpro.myweather.presentation.core.widgets.TabBarButton
                android:id="@+id/charts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                app:weatherIconResource="@string/wi_cloud"
                app:weatherIconSize="25" />
        </LinearLayout>
    </LinearLayout>

    <!--todo перенести в child container-->
    <include
        android:id="@+id/error_layout"
        layout="@layout/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
</FrameLayout>
